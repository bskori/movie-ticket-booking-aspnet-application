@model Producer

@{ 
    ViewData["Title"] = "Producer Details";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1>Producer Details</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="form-group text-center">
                    <img src="@Model.ProfilePictureURL" class="rounded-circle border border-info" alt="@Model.FullName" width="150" height="150" />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.ProfilePictureURL"></label>
                    <input class="form-control" asp-for="@Model.ProfilePictureURL" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.FullName"></label>
                    <input class="form-control" asp-for="@Model.FullName" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Bio"></label>
                    <input class="form-control" asp-for="@Model.Bio" readonly />
                </div>
                <div class="form-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-primary float-right" asp-action="Edit" asp-route-id="@Model.Id">Update</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>