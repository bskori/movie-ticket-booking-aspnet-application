@model Producer

@{       
    ViewData["Title"] = "Update Producer";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1>Update Producer</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-action="Edit">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="text-center form-group">
                        <img class="rounded-circle" id="ProfilePictureView" width="150" height="150" alt="@Model.FullName" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.ProfilePictureURL"></label>
                        <input class="form-control" asp-for="@Model.ProfilePictureURL" />
                        <span class="text-danger" asp-validation-for="@Model.ProfilePictureURL"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.FullName"></label>
                        <input class="form-control" asp-for="@Model.FullName" />
                        <span class="text-danger" asp-validation-for="@Model.FullName"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.Bio"></label>
                        <input class="form-control" asp-for="@Model.Bio" />
                        <span class="text-danger" asp-validation-for="@Model.Bio"></span>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        <input class="btn btn-outline-primary float-right" type="submit" value="Update" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePictureView');
            output.src = $("#ProfilePictureURL").val();
        });

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePictureView');
            output.src = $(this).val();
        });
    </script>
}