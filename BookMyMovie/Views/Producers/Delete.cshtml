@model Producer

@{
    ViewData["Title"] = "Remove Producer";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1>Confirm deletion of @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="form-group text-center">
                    <img src="@Model.ProfilePictureURL" alt="@Model.FullName" class="rounded-circle" width="150" height="150" />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.ProfilePictureURL"></label>
                    <input class="form-control" asp-for="@Model.ProfilePictureURL" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.FullName"></label>
                    <input class="form-control" asp-for="@Model.FullName" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Bio"></label>
                    <input class="form-control" asp-for="@Model.Bio" readonly />
                </div>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input class="btn-outline-danger float-right" type="submit" value="Confirm" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
