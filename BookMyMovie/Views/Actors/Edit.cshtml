@model Actor

@{ 
    ViewData["Title"] = "Update actor";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1>Update Actor</h1>
        </p>
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <img class="rounded-circle" src="@Model.ProfilePictureURL" alt="@Model.FullName" height="150" width="150" />
                </div>
                <div>
                    <input asp-for="@Model.Id" type="hidden" />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="ProfilePictureURL"></label>
                    <input class="form-control" asp-for="ProfilePictureURL"/>
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="FullName"></label>
                    <input class="form-control" asp-for="FullName" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Bio"></label>
                    <input class="form-control" asp-for="Bio" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    <input class="btn btn-outline-success float-right" type="submit" value="Update" asp-action="Edit" />
                </div>
            </form>
        </div>
    </div>
</div>