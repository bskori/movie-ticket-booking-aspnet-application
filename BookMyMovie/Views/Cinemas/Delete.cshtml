@model Cinema

@{
    ViewData["Title"] = "Remove cinema";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1>Confirmed deletion of @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="form-group text-center">
                    <img class="rounded-circle border border-info" src="@Model.Logo" alt="@Model.Name" width="150" height="150" />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Logo"></label>
                    <input class="form-control" asp-for="@Model.Logo" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Name"></label>
                    <input class="form-control" asp-for="@Model.Name" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Description"></label>
                    <input class="form-control" asp-for="@Model.Description" readonly />
                </div>
                <div class="form-group">
                    <form asp-action="Delete">
                       <input class="btn btn-outline-danger float-right" type="submit" value="Confirm" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
