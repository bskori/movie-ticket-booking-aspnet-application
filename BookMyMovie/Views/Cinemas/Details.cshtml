@model Cinema

@{ 
    ViewData["Title"] = "Cinema details";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1>Details of @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="form-group text-center">
                    <img class="border border-secondary rounded-circle" src="@Model.Logo" alt="@Model.Name" width="150" height="150" />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Logo"></label>
                    <input class="form-control" asp-for="@Model.Logo" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Name"></label>
                    <input class="form-control" asp-for="@Model.Name" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Description"></label>
                    <input class="form-control" asp-for="@Model.Description" readonly />
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-secondary" asp-action="Index"> Show All </a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-primary float-right" asp-controller="Cinemas" asp-action="Edit" asp-route-id="@Model.Id">
                            Edit
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>